<Window x:Class="TeachingInsights2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teaching Insights" Height="550" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="319*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name ="startButton" Content="Start" HorizontalAlignment="Left" Margin="38,253,0,0" VerticalAlignment="Top" Width="107" Click="startButton_click"/>
        <Button Name="stopButton" Content="Stop" HorizontalAlignment="Left" Margin="54,278,0,0" VerticalAlignment="Top" Width="75" Click="stopButton_Click"/>
        <Image Name="CapturedImage"  HorizontalAlignment="Left" Height="243" Margin="196,65,0,0" VerticalAlignment="Top" Width="419"/>
        <StackPanel HorizontalAlignment="Left" Height="147" Margin="10,10,0,0" VerticalAlignment="Top" Width="181">
            <Grid Height="30" Margin="0,0,10,0">
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="95" RenderTransformOrigin="0.703,0.476" Content="Attention Level"/>
                <TextBlock Name="attentionValue" HorizontalAlignment="Left" Margin="114,5,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="47"/>
            </Grid>
            <Grid Height="25">
                <Label HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="110" RenderTransformOrigin="0.703,0.476" Content="Engagement Level" Margin="0,0,0,-5"/>
                <TextBlock x:Name="engagementValue" HorizontalAlignment="Left" Margin="115,5,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="56" RenderTransformOrigin="3.5,0.312"/>
            </Grid>
        </StackPanel>


    </Grid>
</Window>
