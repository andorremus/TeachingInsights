<UserControl x:Class="TeachingInsights2.controls.WebcamFeed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="275" Width="493"
             DataContext="{Binding WebcamImage, Source={StaticResource Locator}}"
             xmlns:netVlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf">
    <Grid HorizontalAlignment="Left" Width="473" Height="255" VerticalAlignment="Top" Margin="10,10,0,0">
        <Image HorizontalAlignment="Left" Height="235" Margin="10,10,0,0" VerticalAlignment="Top" Width="453" Source="{Binding Path=RenderedImage}" SourceUpdated="Image_SourceUpdated"/>
    </Grid>
</UserControl>
